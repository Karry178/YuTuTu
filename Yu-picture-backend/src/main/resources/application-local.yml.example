# 本地开发环境配置模板
# 使用说明：
# 1. 复制此文件并重命名为 application-local.yml
# 2. 填入你的真实配置信息
# 3. application-local.yml 已在 .gitignore 中，不会被提交到 Git

spring:
  # 数据库配置 - 填入你的数据库信息
  datasource:
    url: jdbc:mysql://your_host:3306/yu_picture?useUnicode=true&characterEncoding=utf8&useSSL=false&allowPublicKeyRetrieval=true&serverTimezone=GMT%2B8
    username: your_username
    password: your_password

  # Redis 配置 - 填入你的 Redis 信息
  redis:
    host: your_redis_host
    password: your_redis_password

  # ShardingSphere 数据源配置 - 填入你的数据库信息
  shardingsphere:
    datasource:
      yu_picture:
        url: jdbc:mysql://your_host:3306/yu_picture
        username: your_username
        password: your_password

# 对象存储配置(腾讯云API) - 填入你的腾讯云 COS 信息
cos:
  client:
    host: https://your-bucket.cos.region.myqcloud.com
    secretId: your_secret_id
    secretKey: your_secret_key
    region: ap-chengdu
    bucket: your-bucket-name

# 阿里云AI扩图配置 - 填入你的阿里云 API Key
aliYunAi:
  apiKey: your_aliyun_api_key
